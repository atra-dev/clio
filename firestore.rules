rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function role() {
      return isAuthenticated() ? request.auth.token.role : null;
    }

    function isSuperAdmin() {
      return role() == "SUPER_ADMIN";
    }

    function isHR() {
      return role() == "HR";
    }

    function isGRC() {
      return role() == "GRC";
    }

    function isEA() {
      return role() == "EA";
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function nonRoleFieldsOnly() {
      return !("role" in request.resource.data) || request.resource.data.role == resource.data.role;
    }

    // Identity and profile ownership
    match /users/{userId} {
      allow read: if isSuperAdmin() || isHR() || isOwner(userId);
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isOwner(userId) && nonRoleFieldsOnly());
      allow delete: if isSuperAdmin();
    }

    // Invitation-only account provisioning
    match /userInvites/{inviteId} {
      allow read, create, update, delete: if isSuperAdmin();
    }

    // HR-owned employee records
    match /employees/{employeeId} {
      allow read: if isSuperAdmin() || isHR() || isGRC();
      allow create, update, delete: if isSuperAdmin() || isHR();
    }

    // Attendance lifecycle
    match /attendance/{entryId} {
      allow read: if isSuperAdmin() || isHR() || isGRC();
      allow create, update, delete: if isSuperAdmin() || isHR();
    }

    // Sheets / PDF artifacts
    match /documents/{docId} {
      allow read: if isSuperAdmin() || isHR() || isEA() || isOwner(resource.data.ownerUid);
      allow create: if isSuperAdmin() || isHR() || isEA();
      allow update, delete: if isSuperAdmin() || isHR() || isOwner(resource.data.ownerUid);
    }

    // Export controls and batches
    match /exports/{exportId} {
      allow read: if isSuperAdmin() || isGRC();
      allow create, update, delete: if isSuperAdmin() || isGRC();
    }

    // Immutable audit trail
    match /auditLogs/{logId} {
      allow read: if isSuperAdmin() || isGRC();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
